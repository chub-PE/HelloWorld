<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="@dimen/button_width"
                android:background="@drawable/crow"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/crowButton"
                />
            <ImageButton
                android:layout_width="@dimen/button_width"
                android:background="@drawable/pig"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/pigButton"
                />
            <ImageButton
                android:layout_width="@dimen/button_width"
                android:background="@drawable/chicken"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/chickenButton"
                />
            <ImageButton
                android:layout_width="@dimen/button_width"
                android:background="@drawable/donkey"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/donkeyButton"
                />
            <ImageButton
                android:layout_width="@dimen/button_width"
                android:background="@drawable/snake"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/snakeButton"
                />
            <ImageButton
                android:layout_width="@dimen/button_width"
                android:background="@drawable/sheep"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/sheepButton"
                />
            <ImageButton
                android:layout_width="@dimen/button_width"
                android:background="@drawable/wolf"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/wolfButton"
                />

            <ImageButton
                android:layout_width="@dimen/button_width"
                android:background="@drawable/squirrel"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/squirrelButton"
                />


        </LinearLayout>

    </ScrollView>



</LinearLayout>